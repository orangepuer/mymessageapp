<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group form-group">
    <span class="input-group-addon" id="basic-addon1">
      <%= f.label :surname, 'Фамилия', style: 'width: 110px; text-align: left' %>
    </span>
    <%= f.text_field :surname, autofocus: true, class: 'form-control' %>
  </div>

  <div class="input-group form-group">
    <span class="input-group-addon" id="basic-addon1">
      <%= f.label :name, 'Имя', style: 'width: 110px; text-align: left' %>
    </span>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="input-group form-group">
    <span class="input-group-addon" id="basic-addon1">
      <%= f.label :patronymic, 'Отчество', style: 'width: 110px; text-align: left' %>
    </span>
    <%= f.text_field :patronymic, autofocus: true, class: 'form-control' %>
  </div>

  <div class="input-group form-group">
    <span class="input-group-addon" id="basic-addon1">
      <%= f.label :email, style: 'width: 110px; text-align: left' %>
    </span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="input-group form-group">
    <span class="input-group-addon" id="basic-addon1">
      <%= f.label :password, 'Пароль', style: 'width: 110px; text-align: left' %>
      <%# if @minimum_password_length %>
<!--        <em>(<%#= @minimum_password_length %> минимум символов)</em>-->
<!--      <%# end %><br />-->
    </span>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="input-group form-group">
    <span class="input-group-addon" id="basic-addon1">
      <%= f.label :password_confirmation, 'Пароль еще раз', style: 'width: 110px; text-align: left' %><br />
    </span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
