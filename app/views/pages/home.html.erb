<%= render 'shared/flash_error_messages' %>

<div class="row">
  <div class="col-md-12">
    <% if user_signed_in? %>
      <%= render 'messages/message_form' %>
    <% else %>
      <div class="btn-group">
        <%= link_to 'Войдите, чтобы оставить сообщение', new_user_session_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <%= render @messages %>
  </div>
</div>